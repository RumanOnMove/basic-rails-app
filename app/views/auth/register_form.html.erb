<%= form_with(model: @user, url: registration_path) do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
    <% if @user.errors[:name].any? %>
      <p class="text-danger">
        <%= @user.errors[:name].first %>
      </p>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, class: 'form-control' %>
    <% if @user.errors.has_key?(:email) %>
      <p class="text-danger">
        <%= @user.errors[:email].first %>
      </p>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: 'form-label' %>
    <%= f.password_field :password, class: 'form-control' %>
    <% if @user.errors.has_key?(:password) %>
      <p class="text-danger">
        <%= @user.errors[:password].first %>
      </p>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, class: 'form-label' %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
    <% if @user.errors.has_key?(:password_confirmation) %>
      <p class="text-danger">
        <%= @user.errors[:password_confirmation].first %>
      </p>
    <% end %>
  </div>

  <%= f.submit 'Register', class: 'btn btn-primary' %>
<% end %>